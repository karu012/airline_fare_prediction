pipeline {
    agent any
    environment {
        DOCKERHUB_CREDENTIALS = credentials('test1') // Jenkins credentials ID
    }
    stages {
        stage('Clone Repo') {
            steps {
                git branch: 'main', url: 'https://github.com/karu012/airline_fare_prediction.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                echo "Building Docker image..."
                sh 'docker build -t karunya1203/airlinefare:$BUILD_NUMBER .'
            }
        }
        stage('Login to DockerHub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'test1', usernameVariable: 'DOCKERHUB_USERNAME', passwordVariable: 'DOCKERHUB_PASSWORD')]) {
                    sh "docker login -u $DOCKERHUB_USERNAME -p $DOCKERHUB_PASSWORD"
                }
            }
        }
        stage('Push Image') {
            steps {
                echo "Pushing Docker image to Docker Hub..."
                sh 'docker push karunya1203/airlinefare:$BUILD_NUMBER'
            }
        }
        stage('Deploy to Staging') {
            steps {
                sh 'docker pull karunya1203/airlinefare:$BUILD_NUMBER'
                sh 'docker stop airlinefare-container || true'
                sh 'docker rm airlinefare-container || true'
                sh 'docker run -d --name airlinefare-container -p 8000:8000 karunya1203/airlinefare:$BUILD_NUMBER'
            }
        }
    }
    post {
        always {
            sh 'docker logout'
        }
    }
}
